%ul
  - @pages.each do |page|
    %li
      = link_to page.title, wiki_page_url(@wiki, page)
      = link_to "Aanpassen", edit_wiki_page_path(@wiki, page)
      = link_to "Verwijderen", wiki_page_path(@wiki, page), method: :delete
.actions
  =link_to "Nieuw", new_wiki_page_path(@wiki), class: "btn primary"